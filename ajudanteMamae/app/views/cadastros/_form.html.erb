<%= form_for @cadastro, :html => { :class => "form-horizontal cadastro" } do |f| %>

  <% if @cadastro.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cadastro.errors.count, "error") %> prohibited this cadastro from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cadastro.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :senha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :senha, :class => 'form-control' %>
    </div>
    <%=f.error_span(:senha) %>
  </div>
  <div class="form-group">
    <%= f.label :telefone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :telefone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:telefone) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cadastros_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
