= form_for @cadastro do |f|
  - if @cadastro.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cadastro.errors.count, "error")} prohibited this cadastro from being saved:"
      %ul
        - @cadastro.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :usuario
    = f.text_field :usuario
  .field
    = f.label :senha
    = f.text_field :senha
  .actions
    = f.submit 'Save'
