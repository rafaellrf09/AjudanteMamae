<%= form_for @rotina, :html => { :class => "form-horizontal rotina" } do |f| %>

  <% if @rotina.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@rotina.errors.count, "error") %> prohibited this rotina from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @rotina.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :bebes_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:bebes_id, Bebe.order(:nome),
                                    :id, :nome, :prompt => true) %>
    </div>
    <%=f.error_span(:bebes_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rotinas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
