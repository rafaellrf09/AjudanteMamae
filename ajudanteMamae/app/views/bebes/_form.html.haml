= form_for @bebe do |f|
  - if @bebe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bebe.errors.count, "error")} prohibited this bebe from being saved:"
      %ul
        - @bebe.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :idade
    = f.number_field :idade
  .actions
    = f.submit 'Save'
