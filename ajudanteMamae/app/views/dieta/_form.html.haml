= form_for @dietum do |f|
  - if @dietum.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dietum.errors.count, "error")} prohibited this dietum from being saved:"
      %ul
        - @dietum.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :bebe
    - if @dietum.bebe.reference?
      \%= f.label :%= attribute.column_name %>  %>
      \%= f.collection_select :%= attribute.column_name %>, #{attribute.name.camelize}.all, :id, :name, prompt: true  %>
    - else 
   
    = f.association :bebe, label_method: :nome
  .actions
    = f.submit 'Save'
